<% layout('/layouts/boilerplate.ejs') %>
    <h1>Come Visit Our <%= cats.length %> Kitties!</h1>
    <div class="container">
        <div class="row">
            <% for(let cat of cats) { %>
                <div class="card mb-3" style="max-width: 540px;">
                    <div class="row g-0 gx-5">
                        <div class="col-md-4">
                            <img src="<%=cat.imageUrl%>" class="img-fluid img-thumbnail" alt="...">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <a class="link-dark" href="/cats/<%=cat._id%>">
                                        <%=cat.name%>
                                    </a><br>
                                </h5>
                                <p class="card-text"><small class="text-muted">Last updated 3 mins ago
                                    </small></p>
                            </div>
                        </div>
                    </div>
                </div>
                <% } %>
        </div>
    </div>